<% layout('partials/layout') -%>

  <div class="container mt-4">
    <h1 class="text-center text-dark mb-4 border-bottom pb-2">
      Products List
    </h1>

    <% if (user && user.role==='admin' ) { %>
      <div class="d-flex justify-content-end mb-3">
        <a href="/products/add" class="btn btn-success">+ Add Product</a>
      </div>
      <% } %>

        <div class="row g-4">
          <% if (data && data.data.length> 0) { %>
            <% data.data.forEach(product=> { %>
              <div class="col-md-4 col-sm-6">
                <div class="card h-100 shadow-sm">
                  <img src="/images/<%= product.image_url %>" class="card-img-top" alt="<%= product.title %>"
                    style="height:200px;object-fit:cover;">

                  <div class="card-body text-center d-flex flex-column">
                    <h5 class="card-title">
                      <%= product.title %>
                    </h5>
                    <p class="card-text text-muted flex-grow-1">
                      <%= product.description %>
                    </p>
                  </div>

                  <div class="card-footer bg-light d-flex justify-content-between align-items-center">
                    <span class="fw-bold text-danger fs-5">â‚¹<%= product.price %></span>
                    <span class="text-secondary">Qty: <%= product.quantity %></span>
                  </div>

                  <div class="card-footer bg-light">
                    <form action="/carts" method="POST" class="d-inline">
                      <input type="hidden" name="productId" value="<%= product.id %>">
                      <input type="hidden" name="quantity" value="1">
                      <button type="submit" class="btn btn-warning btn-sm w-100 fs-5">
                        <i class="bi bi-cart-plus me-1 fs-4 "></i> Add to Cart
                      </button>
                    </form>
                  </div>

                  <% if (user && user.role==='admin' ) { %>
                    <div class="card-footer d-flex gap-2">
                      <a href="/products/<%= product.id %>" class="btn btn-primary btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                      <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal"
                        data-bs-target="#confirmDeleteModal<%= product.id %>">
                        <i class="bi bi-trash"></i> Delete
                      </button>
                    </div>
                  <% } %>

                      <div class="modal fade" id="confirmDeleteModal<%= product.id %>" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                          <div class="modal-content">
                            <div class="modal-header bg-danger text-white">
                              <h5 class="modal-title">Confirm Delete</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                              Are you sure you want to delete <b>
                                <%= product.title %>
                              </b>?
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                              <form action="/products/<%= product.id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>
                </div>
              </div>


              <% }) %>
                <nav aria-label="User list pagination">
                  <ul class="pagination justify-content-center mt-4">
                    <% if (data.links.previous) { %>
                      <li class="page-item">
                        <a class="page-link" href="<%= data.links.previous %>">
                          <i class="bi bi-arrow-left-circle"></i> Previous
                        </a>
                      </li>
                      <% } else { %>
                        <li class="page-item disabled">
                          <span class="page-link"><i class="bi bi-arrow-left-circle"></i> Previous</span>
                        </li>
                        <% } %>

                          <% for (let i=1; i <=data.meta.totalPages; i++) { %>
                            <li class="page-item <%= data.meta.currentPage === i ? 'active' : '' %>">
                              <a class="page-link" href="?page=<%= i %>&limit=<%= data.meta.itemsPerPage %>">
                                <i class="bi bi-circle-fill me-1"></i>
                                <%= i %>
                              </a>
                            </li>
                            <% } %>

                              <% if (data.links.next) { %>
                                <li class="page-item">
                                  <a class="page-link" href="<%= data.links.next %>">
                                    Next <i class="bi bi-arrow-right-circle"></i>
                                  </a>
                                </li>
                                <% } else { %>
                                  <li class="page-item disabled">
                                    <span class="page-link">Next <i class="bi bi-arrow-right-circle"></i></span>
                                  </li>
                                  <% } %>
                  </ul>
                </nav>
                <% } else { %>
                  <div class="col-12 text-center py-5">
                    <p class="text-muted fs-5">No products found.</p>
                  </div>
                  <% } %>
        </div>
  </div>