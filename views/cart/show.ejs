<% layout('partials/layout') -%>

<div class="container my-5">
  <h2 class="text-center text-primary fw-bold mb-4">
    <i class="bi bi-cart-plus me-1 fs-4 "></i> Your Shopping Cart
  </h2>

  <% if (cart && cart.length > 0) { %>
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="list-group shadow-sm">
        <% cart.forEach(item => { %>
        <div class="list-group-item d-flex align-items-center justify-content-between mb-3 rounded shadow-sm p-3">
          <div class="d-flex align-items-center">
            <img src="/images/<%= item.product.image_url %>" alt="<%= item.product.title %>" class="rounded me-3" style="width:80px;height:80px;object-fit:cover;">
            <div>
              <h5 class="mb-1 fw-bold"><%= item.product.title %></h5>
              <p class="mb-0 text-muted">‚Çπ <%= item.product.price %></p>
            </div>
          </div>

          <div class="d-flex align-items-center">
            <form action="/carts/decrease/<%= item.id %>?_method=PUT" method="POST" class="d-inline">
              <button type="submit" class="btn btn-outline-secondary btn-sm">-</button>
            </form>

            <span class="mx-3 fw-bold fs-5"><%= item.quantity %></span>

            <form action="/carts/increase/<%= item.id %>?_method=PUT" method="POST" class="d-inline">
              <button type="submit" class="btn btn-outline-secondary btn-sm">+</button>
            </form>
          </div>

          <div class="text-end ms-4">
            <p class="fw-bold text-danger mb-0">
              ‚Çπ <%= (parseFloat(item.product.price) * item.quantity).toFixed(2) %>
            </p>
          </div>
        </div>
        <% }) %>
      </div>

      <div class="card mt-4 shadow-sm">
        <div class="card-body d-flex justify-content-between align-items-center">
          <h4 class="fw-bold text-success">
            Total: ‚Çπ
            <%= cart.reduce((total, item) => total + (parseFloat(item.product.price) * item.quantity), 0).toFixed(2) %>
          </h4>
          <!-- <a href="/checkout" class="btn btn-primary btn-lg">Place order</a> -->
          <form action="/orders" method="POST">
            <input type="hidden" name="shippingAddressId" value="1" />
            <input type="hidden" name="total_price" value="<%= cart.reduce((total, item) => total + (parseFloat(item.product.price) * item.quantity), 0).toFixed(2) %>">
            <button type="submit" class="btn btn-primary btn-lg">Place order</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% } else { %>
  <div class="text-center py-5">
    <h4 class="text-muted">üõçÔ∏è Your cart is empty</h4>
    <a href="/products" class="btn btn-outline-primary mt-3">Continue Shopping</a>
  </div>
  <% } %>
</div>