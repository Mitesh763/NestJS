<% layout('partials/layout') -%>

  <div class="container my-5">
    <div class="card shadow-sm">
      <div class="card-body">
        <h1 class="h3 text-center mb-4">
          <i class="bi bi-people-fill me-2"></i>User List
        </h1>

        <div class="table-responsive" style="max-height: 700px; overflow-y: auto;">
          <table class="table table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th>Profile</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (data.data.length> 0) { %>
                <% data.data.map(user=> { %>
                  <tr>
                    <td>
                      <% if (user.profile) { %>
                        <img src="/images/<%= user.profile %>" alt="<%= user.name %>" class="rounded-circle border"
                          style="width:40px; height:40px; object-fit:cover;">
                        <% } else { %>
                          <i class="bi bi-person-circle fs-3 text-secondary"></i>
                          <% } %>
                    </td>
                    <td>
                      <%= user.name %>
                    </td>
                    <td><i class="bi bi-envelope me-1 text-muted"></i>
                      <%= user.email %>
                    </td>
                    <td><i class="bi bi-phone me-1 text-muted"></i>
                      <%= user.phone_number %>
                    </td>
                    <td>
                      <div class="btn-group btn-group-sm">
                        <a href="/users/<%= user.id %>" class="btn btn-sm btn-warning me-2"><i class="bi bi-pencil"></i> Edit</a>
                        <form action="/users/<%= user.id %>?_method=DELETE" method="POST" class="d-inline">
                          <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal"
                            data-bs-target="#confirmDeleteModal<%= user.id %>">
                            <i class="bi bi-trash"></i> Delete
                          </button>
                        </form>
                      </div>

                      <div class="modal fade" id="confirmDeleteModal<%= user.id %>" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                          <div class="modal-content">
                            <div class="modal-header bg-danger text-white">
                              <h5 class="modal-title">Confirm Delete</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                              Are you sure you want to delete <b>
                                <%= user.name %>
                              </b>?
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                              <form action="/users/<%= user.id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>

                    </td>
                  </tr>
                  <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="5" class="text-center text-muted fst-italic">
                          <i class="bi bi-exclamation-circle me-1"></i>No users found.
                        </td>
                      </tr>
                      <% } %>
            </tbody>
          </table>
        </div>

        <nav aria-label="User list pagination">
          <ul class="pagination justify-content-center mt-4">
            <% if (data.links.previous) { %>
              <li class="page-item">
                <a class="page-link" href="<%= data.links.previous %>">
                  <i class="bi bi-arrow-left-circle"></i> Previous
                </a>
              </li>
              <% } else { %>
                <li class="page-item disabled">
                  <span class="page-link"><i class="bi bi-arrow-left-circle"></i> Previous</span>
                </li>
                <% } %>

                  <% for (let i=1; i <=data.meta.totalPages; i++) { %>
                    <li class="page-item <%= data.meta.currentPage === i ? 'active' : '' %>">
                      <a class="page-link" href="?page=<%= i %>&limit=<%= data.meta.itemsPerPage %>">
                        <i class="bi bi-circle-fill me-1"></i>
                        <%= i %>
                      </a>
                    </li>
                    <% } %>

                      <% if (data.links.next) { %>
                        <li class="page-item">
                          <a class="page-link" href="<%= data.links.next %>">
                            Next <i class="bi bi-arrow-right-circle"></i>
                          </a>
                        </li>
                        <% } else { %>
                          <li class="page-item disabled">
                            <span class="page-link">Next <i class="bi bi-arrow-right-circle"></i></span>
                          </li>
                          <% } %>
          </ul>
        </nav>

      </div>
    </div>
  </div>